{% extends 'base.html.twig' %}

{% block title %}Contactez-nous ! - O'My Beer!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="d-flex justify-content-center mt-4">
    <img data-src="{{ asset('assets/img/ble.webp')}}" class="lazy img-fluid" alt="Logo" style="height: 80px; transform: rotate(-45deg)">
    <h1 class=" mt-4 mx-4 pt-2">Contactez-nous !</h1>
    <img data-src="{{ asset('assets/img/ble.webp')}}" class="lazy img-fluid" alt="Logo" style="height: 80px; transform: rotate(45deg)">
</div>

<div class="container mx-auto text-center align-middle my-3 col-lg-3 col-sm-10">
    {{ form_start(form, {'attr' : {'novalidate' : 'novalidate'}}) }}

        {{ form_widget(form) }}
        <button class="btn btn-secondary" title="Envoyer">{{ button_label|default("Envoyer") }}</button>
        
    {{ form_end(form) }}
</div>

{% endblock %}