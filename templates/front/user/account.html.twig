{% extends 'base.html.twig' %}

{% block title %}Mes informations - O'My Beer!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<h1 class="text-center mt-4 mb-5 text-uppercase pt-5 ">Mes informations</h1>
<div class="d-flex flex-column flex-sm-row justify-content-center align-items-center col-10 col-lg-6 col-md-8 mx-auto m-5 pb-5 border-bottom border-secondary">
  <div class="img">
  <img data-src="{{ asset('assets/img/beerdrinker.webp') }}" class="lazy" alt="Illustration compte" height="300" role="presentation">
  </div>
      <table class="table-responsive table-success  text-dark align-middle my-3 col-lg-6 col-sm-10">
        <tbody>
          <tr>
              <th class="w-50 text-primary fs-6 fw-normal p-1 text-uppercase fw-bold">Pseudo:</th>
              <td>{{ app.user.username }}</td>
          </tr>
          <tr>
              <th class="w-50 text-primary fs-6 fw-normal p-1 text-uppercase fw-bold">Email:</tsh>
              <td>{{ app.user.email }}</td>
          </tr> 
          <tr>
              <th class="w-50 text-primary fs-6 fw-normal p-1 text-uppercase fw-bold">Mot de passe:</tsh>
              <td><a href="{{path('app_forgot_password_request')}}">Changer mon mot de passe</a></td>
          </tr> 
        </tbody>
      </table>
  </div>


<div class="d-flex flex-row m-3 mb-5 justify-content-center gap-2 gap-md-5">
  {# Favorites  #}
  <div class="card" style="width: 18rem;">
    <div class="card-body d-flex flex-column justify-content-center align-items-center">
      <p class="fs-5 fw-bold card-title text-center">Mes bières favorites</p>
      <i class="bi bi-heart mb-2 text-secondary" style="font-size: 3em;" fill="#F36F28"></i>
      <a href="{{ path('app_favorite_list') }}" class="btn btn-primary text-white" title="Voir mes favoris" role="button">Voir ma liste</a>
    </div>
  </div>

  {# A tester  #}
  <div class="card" style="width: 18rem;">
    <div class="card-body d-flex flex-column justify-content-center align-items-center">
      <p class="fs-5 fw-bold card-title text-center">Mes bières à tester</p>
      <i class="bi bi-bookmark-check mb-2 text-secondary" style="font-size: 3em;"></i> 
      <a href="{{ path('app_test_list') }}" class="btn btn-primary text-white" fill="ff9e00" title="Voir mes à tester" role="button">Voir ma liste</a>
    </div>
  </div>
</div>
{% endblock %}
