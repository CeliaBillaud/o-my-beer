{% extends 'base_back.html.twig' %}

{% block title %}{{ user.username }}{% endblock %}

{% block body %}
 <div class="d-flex justify-content-center align-items-center m-5 gap-5">
        <a href="{{ path('app_back_user_list') }}">
            <i class="bi bi-arrow-left-circle fs-2" title="Retour"></i>
        </a>
        <h1 class="text-white text-center m-0">{{ user.username }}</h1>
    </div>

    <div class="d-flex container gap-3 justify-content-center">
            <a href="{{ path('app_back_user_edit', {'id': user.id}) }}">
                <button class="btn text-primary"><i class="bi bi-pencil-fill" title="Modifier"></i></button>
            </a>
            {{ include('back/user/_delete_form.html.twig') }}
        
    </div>
    <table class="table-responsive mx-auto table-success text-center text-white align-middle my-3 mx-2 mx-sm-auto col-lg-6 col-sm-10" role="presentation">
        <tbody>
            <tr class="border-bottom">
                <th class="text-primary fs-6 fw-normal p-1">ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr class="border-bottom">
                <th class="text-primary fs-6 fw-normal p-1">EMAIL</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr class="border-bottom">
                <th class="text-primary fs-6 fw-normal p-1">NOM D'UTILISATEUR</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th class="text-primary fs-6 fw-normal p-1">ROLES</th>
                {# Modifies datas for a better mobile display #}
					{% if "ROLE_ADMIN" in user.roles and "ROLE_USER" in user.roles %}
					<td class="border-top">{{ 'ADMIN, USER' }}</td>
					{% elseif "ROLE_ADMIN" in user.roles %}
					<td class="border-top">{{ 'ADMIN' }}</td>
					{% elseif "ROLE_USER" in user.roles %}
					<td class="border-top">{{ 'USER' }}</td>
					{% else %}
					<td class="border-top">{{ 'Aucun r√¥le' }}</td>
					{% endif %}
            </tr>
        </tbody>
    </table>
{% endblock %}
