{% extends 'base_back.html.twig' %}

{% block title %}Types{% endblock %}

{% block body %}
    <h1 class="text-white text-center m-5">Types de bières</h1>
    <a class="btn btn-nav btn-success border-2 border-light d-flex justify-content-center w-25 text-white mb-3 mx-auto" href="{{ path('app_back_type_new') }}">Nouveau type</a>
	<table class="table-responsive mx-auto p-2 col-lg-4 col-sm-6 col-10  table-success text-center text-white" role="presentation">
        <thead>
            <tr>
                <th class="text-primary fs-5 p-1">ID</th>
                <th class="text-primary fs-5 p-1">NOM</th>
                <th class="text-primary fs-5"></th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td class="border-top col-2">{{ type.id }}</td>
                <td class="border-top col-2">{{ type.name }}</td>
                <td class="border-top col-2">
                    <div class="d-flex gap-1 p-0 justify-content-center">
							<a href="{{ path('app_back_type_show', {'id': type.id}) }}">
								<button class="btn text-primary"><i class="bi bi-eye-fill" title="Voir"></i></button>
							</a>
							<a href="{{ path('app_back_type_edit', {'id': type.id}) }}">
								<button class="btn text-primary"><i class="bi bi-pencil-fill" title="Modifier"></i></button>
							</a>
							{{ include('back/type/_delete_form.html.twig') }}
						</div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
