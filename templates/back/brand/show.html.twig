{% extends 'base_back.html.twig' %}

{% block title %}{{ brand.name }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center m-5 gap-5">
        <a href="{{ path('app_back_brand_list') }}">
            <i class="bi bi-arrow-left-circle fs-2" title="Retour"></i>
        </a>
        <h1 class="text-white text-center m-0">{{ brand.name }}</h1>
    </div>

     <div class="d-flex container gap-3 justify-content-center">
        <a href="{{ path('app_back_brand_edit', {'id': brand.id}) }}">
            <button class="btn text-primary"><i class="bi bi-pencil-fill" title="Modifier"></i></button>
        </a>
        {{ include('back/brand/_delete_form.html.twig') }}
    
    </div>

    <table class="table-responsive mx-auto table-success text-center text-white align-middle my-3 mx-2 col-lg-6  col-10" role="presentation">
        <tbody>
            <tr class="border-bottom">
                <th class="text-primary fs-6 fw-normal p-1">ID</th>
                <td>{{ brand.id }}</td>
            </tr>
            <tr class="border-bottom">
                <th class="text-primary fs-6 fw-normal p-1">NOM</th>
                <td>{{ brand.name }}</td>
            </tr>
            <tr class="border-bottom">
                <th class="text-primary fs-6 fw-normal p-1">DESCRIPTION</th>
                <td>{{ brand.description }}</td>
            </tr>
            <tr class="border-bottom">
                <th class="text-primary fs-6 fw-normal p-1">PAYS</th>
                <td>{{ brand.country }}</td>
            </tr>
            <tr class="border-bottom">
                <th class="text-primary fs-6 fw-normal p-1">CRÃ‰ATION</th>
                <td>{{ brand.foundedIn ? brand.foundedIn|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th class="text-primary fs-6 fw-normal p-1">IMAGE</th>
                <td><img src="{{ brand.image }}" alt="Image de la marque {{ brand.name }}" class="img-fluid"></td>
            </tr>
        </tbody>
    </table>

{% endblock %}
