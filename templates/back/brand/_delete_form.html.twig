<form method="post" action="{{ path('app_back_brand_delete', {'id': brand.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette marque?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ brand.id) }}">
    <button class="btn text-primary"><i class="bi bi-trash-fill" title="Supprimer"></i></button>
</form>
