{% extends 'base_back.html.twig' %}

{% block title %}Commentaire n°{{ review.id }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center m-5 gap-5">
        <a href="{{ path('app_back_review_list') }}">
            <i class="bi bi-arrow-left-circle fs-2" title="Retour"></i>
        </a>
        <h1 class="text-white text-center m-0">Modérer le commentaire</h1>
    </div>

     <div class="d-flex container gap-3 justify-content-center">
        {{ include('back/review/_delete_form.html.twig') }}
    
    </div>

    <table class="table-responsive mx-auto table-success text-center text-white align-middle my-3 mx-2 col-10 col-md-6 col-lg-4" role="presentation">
        <tbody>
            <tr class="border-bottom">
                <th class="text-primary fs-6 fw-normal p-1">ID</th>
                <td>{{ review.id }}</td>
            </tr>
            <tr class="border-bottom">
                <th class="text-primary fs-6 fw-normal p-1">AUTEUR</th>
                <td>{{ review.user.username }}</td>
            </tr>
            <tr class="border-bottom">
                <th class="text-primary fs-6 fw-normal p-1">CONTENU</th>
                <td>{{ review.content }}</td>
            </tr>
            <tr class="border-bottom">
                <th class="text-primary fs-6 fw-normal p-1">NOTE</th>
                <td>{{ review.rating }}</td>
            </tr>
            <tr class="border-bottom">
                <th class="text-primary fs-6 fw-normal p-1">DATE</th>
                <td>{{ review.createdAt|date('Y-m-d') }}</td>
            </tr>
            <tr class="border-bottom">
                <th class="text-primary fs-6 fw-normal p-1">SIGNALÉS</th>
                <td>{{ review.reportCount }} fois</td>
            </tr>
            
        </tbody>
    </table>

{% endblock %}
