<form method="post" action="{{ path('app_back_review_delete', {'id': review.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet avis?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
    <button class="btn text-primary"><i class="bi bi-trash-fill" title="Supprimer"></i></button>
</form>
